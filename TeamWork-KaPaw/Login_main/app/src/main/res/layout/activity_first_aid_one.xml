<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:orientation="vertical">
                <WebView
                    android:id="@+id/FirstAidOne"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginStart="-3dp"
                    android:layout_marginTop="50dp"
                    />
                <TextView
                    android:id="@+id/first"
                    android:layout_width="357dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/dog_first_aid_5_essential_emergency_skills"
                    android:textAlignment="center"
                    android:textSize="35sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/firstaidCard1"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="#FFEBCD"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/firstaidDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/baloo_bhai"
                            android:text="@string/april_1_2023"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/firstaidCard2"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="140dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="#E0CDFF"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/firstaidName"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/baloo_bhai"
                            android:text="@string/veterinary_secrets"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/firstaidCard3"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="275dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="#FFCDD6"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/firstaidDoc"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/baloo_bhai"
                            android:text="@string/dr_jones"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/firstaidDescript1"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/dr_jones_shows_you_his_top_5_essential_veterinary_emergency_skills_that_he_thinks_every_pet_parent_must_know"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/firstaidDescript2"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="1. Dog Poisoning"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/firstaidDescript3"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/_2_bleeding_in_shock"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/firstaidDescript4"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="3. Bloat"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/firstaidDescript5"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/_4_dog_choking_heimlich"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/firstaidDescript6"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="5. Knowing if it's an emergency or not"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
