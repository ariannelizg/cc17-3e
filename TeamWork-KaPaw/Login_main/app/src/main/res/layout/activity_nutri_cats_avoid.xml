<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ingredients"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:orientation="vertical"
                android:textColor="@color/white">

                <TextView
                    android:id="@+id/IngredientsToAvoidTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/ingredients_to_avoid"
                    android:textAlignment="center"
                    android:textSize="48sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/chocolate"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/garlic"
                    android:textSize="25sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/onions"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/citrus_oils"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/raw_eggs"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/raw_meat_and_bones"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/caffeinated_drinks"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/alcohol"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/raw_dough"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/AvoidText10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/grapes_and_raisins"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>