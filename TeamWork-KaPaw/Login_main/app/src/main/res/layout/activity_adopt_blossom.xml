<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adoptBlossom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/BlossomAdopt"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:src="@drawable/blossom" />

    <TextView
        android:id="@+id/blossomTextAdopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AceAdopt"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="British Longhair Blossom"
        android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/blossomAgeCard"
                android:layout_width="96dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#FFEBCD"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/blossomAgeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="2 months"
                    android:textSize="19sp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/blossomDefCard"
                android:layout_width="174dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@+id/blossomKiloCard"
                android:layout_toEndOf="@+id/blossomAgeCard"
                app:cardBackgroundColor="#E0CDFF"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/blossomDefText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo_bhai"
                    android:gravity="center"
                    android:text="Calm and Cheerful"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/blossomKiloCard"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="192dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/blossomKiloText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo_bhai"
                    android:gravity="center"
                    android:text="4kgs"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    <TextView
        android:id="@+id/blossomInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blossomKiloCard"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="The British Longhair is a relatively new breed, having descended directly from the British Shorthair cat. By the end of the first world war, the British Shorthair population had dropped dramatically. Breeders worked hard to save these incredible cats by outcrossing with several other breeds including Persians. Kittens with long hair did not qualify as British Shorthairs, however they made excellent pets, as they shared many of the traits that make the breed so popular."
        android:textSize="15dp" />

        <Button
            android:id="@+id/blossomButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/baloo_bhai"
            android:text="Sign Up for Adoption" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>