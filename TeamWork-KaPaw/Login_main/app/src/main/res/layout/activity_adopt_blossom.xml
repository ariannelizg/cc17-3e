<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adopt_blossom">

    <ImageView
        android:id="@+id/BlossomAdopt"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/coco" />

    <TextView
        android:id="@+id/blossomTextAdopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="355dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="Yorkshire Terrier Coco"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/blossomAgeCard"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="308dp"
        app:cardBackgroundColor="#FFEBCD"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/blossomAgeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="3 years"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/blossomDefCard"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="308dp"
        app:cardBackgroundColor="#E0CDFF"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/blossomDefText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Cute and Friendly"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/blossomKiloCard"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="308dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/blossomKiloText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="10kgs"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/blossomInfo"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="The Yorkshire Terrier is a small dog with a big personality. They are feisty and loving, and they make great companions for people of all ages. Yorkies are also the most popular toy dog breed in the United States, and they have won many fans with their devotion to their owners, their elegant looks, and their suitability to apartment living."
        android:textSize="15dp"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/blossomButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="41dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="Sign Up for Adoption" />


</RelativeLayout>