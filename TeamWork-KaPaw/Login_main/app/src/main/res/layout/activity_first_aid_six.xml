<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/FirstAidSix"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginStart="-3dp"
                    android:layout_marginTop="50dp"/>

                <TextView
                    android:id="@+id/firstaidText2"
                    android:layout_width="357dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/heat_stroke_in_cats_symptoms_and_first_aid"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    tools:ignore="TextSizeCheck,VisualLintOverlap" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/firstaidCard2"
                        android:layout_width="139dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="52dp"
                        app:cardBackgroundColor="#E0CDFF"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/firstaidName"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/baloo_bhai"
                            android:text="@string/animalwised"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            tools:ignore="TextSizeCheck"
                            android:textColor="@color/black"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/firstaidCard1"
                        android:layout_width="136dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="50dp"
                        app:cardBackgroundColor="#FFEBCD"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/firstaidDate"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/baloo_bhai"
                            android:text="@string/august_22_2019"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            tools:ignore="TextSizeCheck" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
                <TextView
                    android:id="@+id/firstaidDescript4"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="@string/everything_about_heat_stroke_in_cats_in_this_new_animalwised_video"
                    android:textSize="15sp"
                    tools:ignore="TextSizeCheck,VisualLintLongText"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
