<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adoptPumpkin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/PumpkinAdopt"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:src="@drawable/pumpkin" />

    <TextView
        android:id="@+id/pumpkinTextAdopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AceAdopt"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="Australian Mist Pumpkin"
        android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/pumpkinAgeCard"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#FFEBCD"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/pumpkinAgeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="2.5 years"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pumpkinDefCard"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/pumpkinKiloCard"
        android:layout_toEndOf="@+id/pumpkinAgeCard"
        app:cardBackgroundColor="#E0CDFF"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/pumpkinDefText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Friendly and Playful"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pumpkinKiloCard"
        android:layout_width="101dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/pumpkinKiloText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="7kgs"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>
        </RelativeLayout>
    <TextView
        android:id="@+id/pumpkinInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ikueKiloCard"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="The Australian Mist cat was created in Australia in the 1970s by Dr. Truda Straede using Burmese, Abyssinians, and domestic short-haired cats. The cat's unique coat colors and spotted patterns led to its original name: the Spotted Mist. As the breed continue to evolve, marbled coat patterns emerged, leading to an official name change in 1998 to Australian Mist."
        android:textSize="15dp" />

    <Button
        android:id="@+id/pumpkinButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:text="Sign Up for Adoption"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>