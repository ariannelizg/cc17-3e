<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nutriForDogs"
                android:layout_width="410dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="124dp"
                android:layout_marginBottom="620dp"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center"
                android:text="For Dogs"
                android:textSize="60dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-600dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogsproteinCard"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="30dp">

                    <ImageView
                        android:id="@+id/dogsproteinImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/protein_photo" />

                    <TextView
                        android:id="@+id/dogsproteinText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Protein"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogsveggieCard"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="190dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="30dp">

                    <ImageView
                        android:id="@+id/dogsveggieImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/veg_photo" />

                    <TextView
                        android:id="@+id/dogsveggieText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Vegetables"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogscarboCard"
                    android:layout_width="180dp"
                    android:layout_height="150dp"

                    android:layout_marginTop="180dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="30dp">

                    <ImageView
                        android:id="@+id/dogscarboImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/carbo_photo" />

                    <TextView
                        android:id="@+id/dogscarboText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Carbohydrates"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogscalciumCard"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="180dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="30dp">

                    <ImageView
                        android:id="@+id/dogscalciumImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/calcium_photo" />

                    <TextView
                        android:id="@+id/dogscalciumText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Calcium"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogsotherCard"
                    android:layout_width="180dp"
                    android:layout_height="150dp"

                    android:layout_marginTop="360dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="30dp">

                    <ImageView
                        android:id="@+id/dogsotherImg"
                        android:layout_width="178dp"
                        android:layout_height="100dp"
                        android:src="@drawable/other_photo" />

                    <TextView
                        android:id="@+id/dogsotherText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Other Foods"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogsavoidCard"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="360dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="30dp">

                    <ImageView
                        android:id="@+id/dogsavoidImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/avoid_photo" />

                    <TextView
                        android:id="@+id/dogsavoidText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Ingredients to Avoid"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogsaddCard"
                    android:layout_width="180dp"
                    android:layout_height="150dp"

                    android:layout_marginTop="540dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="30dp">

                    <ImageView
                        android:id="@+id/dogsaddImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/add_photo" />

                    <TextView
                        android:id="@+id/dogsaddText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Dog Food Add-ins"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dogsswitchCard"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="540dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="30dp">

                    <ImageView
                        android:id="@+id/dogsswitchImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/switch_photo" />

                    <TextView
                        android:id="@+id/dogsswitchText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="115dp"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text="Making the Switch"
                        android:textSize="20dp" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>