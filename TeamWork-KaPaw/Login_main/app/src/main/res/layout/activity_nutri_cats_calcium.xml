<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calciums"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CalciumTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="@string/calcium"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/CalciumText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="@string/cheese"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/CalciumText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="@string/milk"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/CalciumText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="@string/tofu"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/CalciumText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="@string/soya_beans"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/CalciumText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="@string/green_leafy_vegetables"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/CalciumText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="@string/nuts"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/CalciumText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="@string/fish"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"/>
    </LinearLayout>
</RelativeLayout>