<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adopt_ikue">

    <ImageView
        android:id="@+id/IkueAdopt"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ikue" />

    <TextView
        android:id="@+id/ikueTextAdopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="355dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="Samoyed Ikue"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ikueAgeCard"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="308dp"
        app:cardBackgroundColor="#FFEBCD"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/ikueAgeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="2 years"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ikueDefCard"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="308dp"
        app:cardBackgroundColor="#E0CDFF"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/ikueDefText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Smart and Mischievous"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ikueKiloCard"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="308dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/ikueKiloText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="25kgs"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ikueInfo"
        android:layout_width="400dp"
        android:layout_height="205dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="442dp"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="The Samoyed is a substantial but graceful dog standing anywhere from 19 to a bit over 23 inches at the shoulder. Powerful, tireless, with a thick all-white coat impervious to cold, Sammies are perfectly beautiful but highly functional. Even their most delightful feature, a perpetual smile, has a practical function: The upturned corners of the mouth keep Sammies from drooling, preventing icicles from forming on the face."
        android:textSize="15dp" />

    <Button
        android:id="@+id/ikueButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="Sign Up for Adoption" />

</RelativeLayout>