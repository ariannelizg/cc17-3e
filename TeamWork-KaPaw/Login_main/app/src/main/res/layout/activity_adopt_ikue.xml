<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adoptIkue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/IkueAdopt"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:src="@drawable/ikue" />

    <TextView
        android:id="@+id/ikueTextAdopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AceAdopt"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="Samoyed Ikue"
        android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/ikueAgeCard"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#FFEBCD"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/ikueAgeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="2 years"
            android:textSize="19sp"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ikueDefCard"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/ikueKiloCard"
        android:layout_toEndOf="@+id/ikueAgeCard"
        app:cardBackgroundColor="#E0CDFF"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/ikueDefText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Mischievous and Playful"
            android:textSize="14sp"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ikueKiloCard"
        android:layout_width="101dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/ikueKiloText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="10kgs"
            android:textSize="18sp"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>
        </RelativeLayout>

    <TextView
        android:id="@+id/ikueInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ikueKiloCard"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="The Samoyed is a large Siberian working breed with pointed ears, a thick double coat, and a classic spitz tail that curls over its back. Often referred to as Sammies, these gentle dogs are easily recognizable by their thick and fluffy white fur. Samoyeds crave attention and are more than happy to put in a bit of work for their humans, be it herding, hunting, or hauling a sled."
        android:textSize="15dp" />

    <Button
        android:id="@+id/ikueButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:text="Sign Up for Adoption"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>